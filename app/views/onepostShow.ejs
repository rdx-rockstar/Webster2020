	<!-- Bootstrap JS -->
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

	<script>
		$(document).ready(function() {
			const comnt = document.getElementById("postedComment");
			$('#sidebarCollapse').on('click', function() {
				$('#sidebar').toggleClass('active');
			});
			// SUBMIT FORM
			$("#post-comment").submit(function(event) {
				// Prevent the form from submitting via the browser.
				event.preventDefault();
				ajaxPost();
			});
			function ajaxPost(){
				var message = $("#comment").val();
				// PREPARE FORM DATA
				var formData = {
					message : message,
				}
				var postId = "<%= post._id %>";

				// DO POST
				$.ajax({
				type : "POST",
				contentType : "application/json",
				url :"/posts/"+postId+"/newComment",
				data : JSON.stringify(formData),
				dataType : 'json',
				success : function(customer) {
					const div = document.createElement("div");
					div.innerHTML = `<div class="d-flex justify-content-start mb-4">
							<div class="msg_cotainer">
								`+message+`
								<span class="msg_time">15:23 PM, Today</span>
							</div>
						</div>`;
					comnt.appendChild(div);
				},
				error : function(e) {
					alert("Error!")
					console.log("ERROR: ", e);
				}
				});
				
				// Reset FormData after Posting
				resetData();
				
			}
				
				function resetData(){
				$("#comment").val("");
				}
		});
	</script>
</body>

