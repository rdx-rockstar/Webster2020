									<div class="card-header msg_head">
										<div class="d-flex bd-highlight">
											<div class="img_cont">
												<img src="https://images.unsplash.com/photo-1459245330819-1b6d75fbaa35?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=80" class="rounded-circle user_img">
												<!-- <span class="online_icon"></span> -->
												<!--<span> tag is an inline container used to mark up a part of a text, or a part of a document-->
											</div>
											<div class="user_info">
												<span><%= post.createdBy.email %></span>
											</div>
										</div>
									</div>
									<% if(!post.videoURL){ %>
										<img style="width: 700px; height: 550px;" src="<%= post.thumbnail %>" class="card-img" alt="...">
									<% }else{ %>
										<video style="width:700px; height:550px" controls>
											<source src="<%= post.videoURL %>" type="video/mp4">
											<!-- <source src="movie.ogg" type="video/ogg"> -->
										  Your browser does not support the video tag.
										  </video>
									<% } %>
									<div class="card-body">
										<div class="likes">
											<span><i class="fas fa-heart"></i><%= post.likes %></span><br>
											<span><%= post.caption %></span>
										</div>
										<h3 style="color:#BB86FC">Comments</h3>
										<div id="postedComment">
											<% post.comments.forEach(comment => { %>
												<div class="d-flex justify-content-start mb-4">
													<div class="msg_cotainer">
														<%= comment.message %>
														<span class="msg_time">15:23 PM, Today</span>
													</div>
												</div>
											<% }); %>
										</div>
										<!-- <div class="d-flex justify-content-start mb-4">
											<div class="msg_cotainer">
												Hi Noora,wanna join us for Amoung Us?
												<span class="msg_time">15:23 PM, Today</span>
											</div>
										</div> -->
										<div class="card-footer">
											<form id="post-comment" data-postId="<%= post._id %>">
												<div class="input-group">
													<textarea id="comment" name="comment" class="form-control type_msg" placeholder="Type your message..."></textarea>
												<div class="input-group-append">
													<button id="enter" class="input-group-text send_btn d-inline-block">Post</button>
												</div>
											</div>
											</form>
										</div>
